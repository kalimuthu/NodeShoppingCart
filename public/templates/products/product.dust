{>"layouts/master" /}

{<title}
    {title}
{/title}

{<body}

{?product}
    <h1>{product.title}</h1>
    <p>Price: {product.price}</p>

    <form class="" action="/cart/{product.id}" method="POST">
        <input type="hidden" name="_csrf" value="{_csrf}">
        <input id="addToCart" type="submit" class="btn btn-info" name="addToCart" value="Add to cart">
    </form>
{/product}

{/body}